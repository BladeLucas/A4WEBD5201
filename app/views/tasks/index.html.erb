<h1><strong>Tasks</strong></h1>

<div>
  <%= link_to "Login", login_path %>
  <%= link_to "New task", new_task_path %>
</div>

<div>
  <% if logged_in? %>
    <p> This is a test </p>
  <% end %>
</div>

<p style="color: green"><%= notice %></p>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p style="align-text: left">
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
</div>